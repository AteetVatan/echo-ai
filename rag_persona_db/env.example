# ChromaDB Configuration
CHROMA_DIR=.chromadb
CHROMA_COLLECTION=echoai_knowledge

# Embeddings Provider: "openai" or "sentence-transformers"
EMBEDDINGS_PROVIDER=openai

# OpenAI Configuration (required if EMBEDDINGS_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBED_MODEL=text-embedding-3-small

# Local Embeddings Configuration (fallback)
LOCAL_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Chunking Configuration
CHUNK_SIZE=900
CHUNK_OVERLAP=150

# Default Visibility for Documents
DEFAULT_VISIBILITY=public

# Logging Level
LOG_LEVEL=INFO
